<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="poppins"
    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/welcome_image"
        android:layout_width="385dp"
        android:layout_height="422dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="50dp"
        app:srcCompat="@drawable/welcome" />

    <TextView
        android:id="@+id/welcome_heading"
        android:layout_width="243dp"
        android:layout_height="106dp"
        android:text="Discover Your Dream Job here"
        android:textAlignment="center"
        android:textColor="#1f41bb"
        android:textSize="30sp"
   android:layout_marginTop="490dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:lineHeight="42sp"
        />


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:text="Explore all the existing job roles based on your \n interest and study major"
        android:textAlignment="center"
        android:textColor="#2b2b2b"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="600dp"
        />

    <Button
        android:id="@+id/welcome_login"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="700dp"
        android:backgroundTint="#1f41bb"
        android:text="Login"
        app:cornerRadius="13sp"
        app:layout_constraintEnd_toStartOf="@+id/welcome_reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:clickable="true"

        />


    <Button
        android:id="@+id/welcome_reg"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Register"
        android:textColor="#000000"
        android:backgroundTint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/welcome_login"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="700dp"
        app:cornerRadius="13sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:clickable="true"


        />


</androidx.constraintlayout.widget.ConstraintLayout>